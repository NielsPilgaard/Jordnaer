@inherits LayoutComponentBase

@inject ISnackbar Snackbar

<MudDialogProvider CloseOnEscapeKey="true" BackdropClick="true" Position="DialogPosition.Center"
    MaxWidth="MaxWidth.Large" CloseButton="true" />
<MudSnackbarProvider />
<MudThemeProvider Theme="JordnaerTheme.CustomTheme" />
<MudPopoverProvider />

<MudLayout>
    <TopBar />
    <MudMainContent id="main-content" Class="mb-15">
        <MudContainer id="main-container" MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudSpacer />
    <Footer></Footer>
    <CookieBanner />
</MudLayout>

<BlazorErrorFooter />

@code {

    [SupplyParameterFromQuery]
    public bool? FirstLogin { get; set; }

    protected override void OnInitialized()
    {
        if (FirstLogin is true)
        {
            Snackbar.Add("Velkommen til Mini MÃ¸der! Du er nu logget ind.", Severity.Success,
            options => options.VisibleStateDuration = 7500);
        }
    }

}