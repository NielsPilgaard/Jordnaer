@page "/Account/Login"

@inject SignInManager<ApplicationUser> SignInManager
@inject ILogger<Login> Logger
@inject IdentityRedirectManager RedirectManager

@attribute [Sitemap]

<div class="account-container">
    <div class="account-paper">
        <h1 class="account-header">Log ind</h1>

        <StatusMessage Message="@_errorMessage" />

        <EditForm Model="Input" OnValidSubmit="LoginUser" FormName="login" class="account-form">
            <DataAnnotationsValidator />

            <div class="form-floating">
                <InputText @bind-Value="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                    placeholder="navn@eksempel.com" id="email" autofocus />
                <label for="email" class="form-label">Email</label>
                <ValidationMessage For="() => Input.Email" class="validation-message" />
            </div>

            <div class="form-floating">
                <InputText type="password" @bind-Value="Input.Password" class="form-control"
                    autocomplete="current-password" aria-required="true" placeholder="adgangskode" id="password" />
                <label for="password" class="form-label">Adgangskode</label>
                <ValidationMessage For="() => Input.Password" class="validation-message" />
            </div>

            <button type="submit" class="account-button-primary">
                Log ind
            </button>

            <hr class="account-divider" />

            <nav class="account-nav-links" aria-label="Konto muligheder">
                <a href="/Account/ForgotPassword" class="account-link">Glemt din adgangskode?</a>
                <a href="/Account/ResendEmailConfirmation" class="account-link">Gensend emailbekræftelse</a>
                <a href="/Account/Register" class="account-button-secondary"
                    style="text-decoration: none; display: inline-block; text-align: center;">
                    Opret ny konto
                </a>
            </nav>
        </EditForm>

        <div class="external-login-section">
            <ExternalLoginPicker />
        </div>
    </div>
</div>

@code {
    private AlertMessage? _errorMessage;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    private string RedirectUrlAfterLogin => string.IsNullOrEmpty(ReturnUrl)
    ? "/"
    : ReturnUrl;

    protected override async Task OnInitializedAsync()
    {
        // ReSharper disable once ConditionIsAlwaysTrueOrFalseAccordingToNullableAPIContract
        // This has been null in prod, but we cannot safely mark the field as nullable
        if (HttpContext is null)
        {
            _errorMessage = new AlertMessage("Der er sket en fejl. Vent et øjeblik og genindlæs siden.", true);
            return;
        }

        if (HttpMethods.IsGet(HttpContext.Request.Method))
        {
            // Clear the existing external cookie to ensure a clean login process
            await HttpContext.SignOutAsync(IdentityConstants.ExternalScheme);
        }
    }

    public async Task LoginUser()
    {
        if (string.IsNullOrEmpty(Input.Email) || string.IsNullOrEmpty(Input.Password))
        {
            _errorMessage = new AlertMessage("Der er sket en fejl. Vent et øjeblik og genindlæs siden.", true);

            return;
        }

        var result = await SignInManager.PasswordSignInAsync(Input.Email,
        Input.Password,
        isPersistent: true,
        lockoutOnFailure: true);
        if (result.Succeeded)
        {
            JordnaerMetrics.LoginCounter.Add(1);

            Logger.LogInformation("User logged in.");

            RedirectManager.RedirectTo(RedirectUrlAfterLogin);
        }
        else if (result.RequiresTwoFactor)
        {
            RedirectManager.RedirectTo(
            "Account/LoginWith2fa",
            new Dictionary<string, object?> { ["returnUrl"] = RedirectUrlAfterLogin, ["rememberMe"] = true });
        }
        else if (result.IsLockedOut)
        {
            Logger.LogWarning("User account locked out.");
            RedirectManager.RedirectTo("Account/Lockout");
        }
        else
        {
            _errorMessage = new AlertMessage("Ugyldigt login.", true);
        }
    }

    private sealed class InputModel
    {
        [Required(ErrorMessage = "Påkrævet.", AllowEmptyStrings = false)]
        [EmailAddress(ErrorMessage = "Email skal være gyldig.")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Påkrævet.", AllowEmptyStrings = false)]
        [DataType(DataType.Password)]
        [Display(Name = "Adgangskode")]
        public string Password { get; set; } = string.Empty;
    }
}