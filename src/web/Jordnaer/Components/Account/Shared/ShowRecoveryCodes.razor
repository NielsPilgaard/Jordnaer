<StatusMessage Message="@StatusMessage" />
<h3>Genoprettelseskoder</h3>
<div class="alert alert-warning" role="alert">
	<p>
		<strong>Opbevar disse koder et sikkert sted.</strong>
	</p>
	<p>
		Hvis du mister din enhed og ikke har genoprettelseskoderne, vil du miste adgangen til din konto.
	</p>
</div>
<div class="row">
	<div class="col-md-12">
		@foreach (var recoveryCode in RecoveryCodes)
		{
			<div>
				<code class="recovery-code">@recoveryCode</code>
			</div>
		}
	</div>
</div>

@code {
	[Parameter]
	public string[] RecoveryCodes { get; set; } = [];

	[Parameter]
	public AlertMessage? StatusMessage { get; set; }
}