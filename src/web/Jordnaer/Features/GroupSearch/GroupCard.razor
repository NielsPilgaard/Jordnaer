@using Jordnaer.Features.Theme
@inject NavigationManager Navigation

<MudPaper Elevation="3" Class="group-card pa-4" @onclick="NavigateToGroup"
    Style="cursor: pointer; transition: all 0.2s ease; background-color: white; display: flex; flex-direction: column; height: 100%;">
    <div class="d-flex flex-column">
        @* Group Image/Avatar and Basic Info *@
        <div class="d-flex gap-3 mb-3">
            @if (!string.IsNullOrEmpty(Group.ProfilePictureUrl))
            {
                <MudAvatar Size="Size.Large" Style="width: 80px; height: 80px;">
                    <MudImage Src="@Group.ProfilePictureUrl" Alt="@Group.Name" />
                </MudAvatar>
            }
            else
            {
                <MudAvatar Size="Size.Large" Color="Color.Primary" Style="width: 80px; height: 80px; font-size: 2rem;">
                    @Group.Name?.FirstOrDefault()
                </MudAvatar>
            }

            <div class="flex-grow-1" style="min-width: 0;">
                <MudText Typo="Typo.h6" Style="font-weight: 600; overflow: hidden; text-overflow: ellipsis;">
                    @Group.Name
                </MudText>
                @{
                    var location = Group.DisplayLocation();
                }
                @if (!string.IsNullOrEmpty(location))
                {
                    <div class="d-flex align-center gap-1 mt-1">
                        <MudIcon Icon="@Icons.Material.Filled.Place" Size="Size.Small" Color="Color.Info" />
                        <MudText Typo="Typo.body2" Style="overflow: hidden; text-overflow: ellipsis;" Color="Color.Info">
                            @location
                        </MudText>
                    </div>
                }
                <div class="d-flex align-center gap-1 mt-1">
                    <MudIcon Icon="@Icons.Material.Filled.People" Size="Size.Small" Color="Color.Info" />
                    <MudText Typo="Typo.body2" Color="Color.Info">
                        @Group.MemberCount medlemmer
                    </MudText>
                </div>
            </div>
        </div>

        @* Short Description *@
        @if (!string.IsNullOrEmpty(Group.ShortDescription))
        {
            <MudDivider Class="mb-3" Style="background-color: #e0e0e0; opacity: 0.5;" />
            <div class="mb-3">
                <MudText Typo="Typo.body2"
                    Style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                    @Group.ShortDescription
                </MudText>
            </div>
        }

        @* Categories *@
        @if (Group.Categories.Length > 0)
        {
            <MudDivider Class="mb-3" Style="background-color: #e0e0e0; opacity: 0.5;" />
            <div>
                <div class="d-flex align-center gap-1 mb-2">
                    <MudIcon Icon="@Icons.Material.Filled.Star" Size="Size.Small" Color="Color.Default" />
                    <MudText Typo="Typo.body2" Style="font-weight: 500;">Kategorier</MudText>
                </div>
                <div class="d-flex flex-wrap gap-1">
                    @foreach (var category in Group.Categories.Take(4))
                    {
                        <MudChip T="string" Size="Size.Small" Variant="Variant.Outlined"
                            Style="@($"border-color: {JordnaerPalette.GreenBackground}; color: {JordnaerPalette.GreenBackground};")">
                            @category
                        </MudChip>
                    }
                    @if (Group.Categories.Length > 4)
                    {
                        <MudChip T="string" Size="Size.Small" Variant="Variant.Outlined"
                            Style="@($"border-color: {JordnaerPalette.GreenBackground}; color: {JordnaerPalette.GreenBackground};")">
                            +@(Group.Categories.Length - 4)
                        </MudChip>
                    }
                </div>
            </div>
        }
    </div>
</MudPaper>

<style>
    .group-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15) !important;
    }
</style>

@code {
    [Parameter]
    public required GroupSlim Group { get; set; }

    private void NavigateToGroup()
    {
        Navigation.NavigateTo($"/groups/{Uri.EscapeDataString(Group.Name)}");
    }
}