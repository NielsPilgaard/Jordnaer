<MudPaper Elevation="3" Class="pa-4 h-100">
    <div class="d-flex flex-column align-center">
        @if (Group.ProfilePictureUrl is not null)
        {
            <MudImage Src="@Group.ProfilePictureUrl"
                Style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover;" Class="mb-4 elevation-4"
                Alt="@Group.Name" />
        }
        else
        {
            <MudAvatar Style="width: 150px; height: 150px; font-size: 3rem;" Color="Color.Primary" Class="mb-4 elevation-4">
                @Group.Name.FirstOrDefault()
            </MudAvatar>
        }

        <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-1"><b>@Group.Name</b></MudText>

        @if (!string.IsNullOrEmpty(Group.ShortDescription))
        {
            <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary" Class="mb-4 px-2">
                @Group.ShortDescription
            </MudText>
        }

        <div class="d-flex flex-column gap-2 w-100 mt-2">
            <div class="d-flex align-center gap-2">
                <MudIcon Icon="@Icons.Material.Filled.Place" Color="Color.Default" />
                <MudText>@Group.DisplayLocation()</MudText>
            </div>

            <div class="d-flex align-center gap-2">
                <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Default" />
                <MudText>@Group.MemberCount Medlemmer</MudText>
            </div>
        </div>

        @if (Group.Categories.Length > 0)
        {
            <MudDivider Class="my-4 w-100" />
            <div class="d-flex flex-wrap justify-center gap-1">
                @foreach (var category in Group.Categories)
                {
                    <MudChip T="string" Size="Size.Small" Color="Color.Tertiary" Variant="Variant.Filled">@category</MudChip>
                }
            </div>
        }
    </div>
</MudPaper>

@code {
    [Parameter]
    public required GroupSlim Group { get; set; }
}
