@using Jordnaer.Shared

<MudCard Class="pa-3 my-3" Elevation="3">
	<MudCardContent>
		<MudText Typo="Typo.body1">@PostItem.Text.SanitizeAndRenderMarkupString() @string.Join(',', PostItem.Categories)</MudText>
		<MudText Typo="Typo.caption">@PostItem.CreatedUtc.ToLocalTime().ToString("g")</MudText>
		@if (PostItem.ZipCode is not null && !string.IsNullOrEmpty(PostItem.City))
		{
            <MudText Typo="Typo.caption">@PostItem.ZipCode, @PostItem.City.Sanitize()</MudText>
		}
		<MudLink Underline="Underline.Hover"
                 title="@_title"
                 Href="@($"/{PostItem.Author.UserName}")">
            @PostItem.Author.DisplayName.SanitizeAndRenderMarkupString()
		</MudLink>
	</MudCardContent>
</MudCard>

