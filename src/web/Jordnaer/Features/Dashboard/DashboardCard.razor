@namespace Jordnaer.Features.Dashboard

<MudCard Class="dashboard-card h-100" Style="@($"{Style}; {BackgroundColor.ToBackgroundColor()}; border-radius: 16px; transition: transform 0.2s ease, box-shadow 0.2s ease;")" Elevation="2">
	<MudCardContent>
		<MudStack AlignItems="AlignItems.Center" Spacing="3">
			<MudIcon Icon="@Icon" Size="Size.Large" Style="@(TextColor.ToTextColor())" />
			<MudText Align="Align.Center" Class="font-cherry-bomb-one"
				Style="@($"{TextColor.ToTextColor()}; font-size: 24px;")">
				@Title
			</MudText>
			<MudText Align="Align.Center" Class="font-open-sans-light" Style="@($"{TextColor.ToTextColor()}; font-size: 1rem;")">
				@Description
			</MudText>
			<MudButton Href="@Href" Variant="Variant.Filled"
				Style="@($"{ButtonBackgroundColor.ToBackgroundColor()}; {ButtonTextColor.ToTextColor()}; font-weight: bold;")"
				Class="rounded-pill px-6 mt-2" Size="Size.Medium">
				@ButtonText
			</MudButton>
		</MudStack>
	</MudCardContent>
</MudCard>

@code {
	[Parameter] public string Icon { get; set; } = string.Empty;
	[Parameter] public string Title { get; set; } = string.Empty;
	[Parameter] public string Description { get; set; } = string.Empty;
	[Parameter] public string Href { get; set; } = string.Empty;
	[Parameter] public string ButtonText { get; set; } = string.Empty;
	[Parameter] public MudColor BackgroundColor { get; set; } = JordnaerPalette.YellowBackground;
	[Parameter] public MudColor TextColor { get; set; } = JordnaerPalette.BlueBody;
	[Parameter] public MudColor ButtonBackgroundColor { get; set; } = JordnaerPalette.BlueBody;
	[Parameter] public MudColor ButtonTextColor { get; set; } = (MudColor)"#FFFFFF";
	[Parameter] public string? Style { get; set; }
}
